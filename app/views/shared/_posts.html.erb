<!-- Featured Posts Section -->
<section class="py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Featured Posts</h2>
      <a href="#" class="btn btn-link text-decoration-none hover-gradient-text">View All</a>
    </div>

    <div class="row g-4">
      <% 3.times do |i| %>
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <img src="https://source.unsplash.com/random/600x400/?blog,writing,<%= i %>" class="card-img-top" alt="Post <%= i + 1 %>">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <div class="me-3">
                  <img src="https://source.unsplash.com/random/50x50/?portrait,<%= i %>" class="rounded-circle" width="40" height="40" alt="Author">
                </div>
                <div>
                  <h6 class="mb-0">Author Name</h6>
                  <small class="text-muted"><%= rand(1..30) %> days ago</small>
                </div>
              </div>
              <h5 class="card-title">Blog Post Title <%= i + 1 %></h5>
              <p class="card-text text-muted">Short excerpt from the blog post that gives readers a preview of the content...</p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-light text-dark"><i class="bi bi-chat-left-text me-1"></i> <%= rand(5..50) %></span>
                <a href="#" class="btn btn-link text-decoration-none hover-gradient-text">Read More</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>